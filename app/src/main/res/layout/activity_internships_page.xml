<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".HomeScreen"
    android:background="@drawable/gradient_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80"
        android:weightSum="10"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/back"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="Internships"
            android:textSize="30sp"
            android:fontFamily="serif"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"

            />
    </LinearLayout>
    <View
        android:layout_below="@+id/signin"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:id="@+id/line"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:text="What type of jobs are you looking for?"
        android:textSize="17sp"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="italic"
        android:textFontWeight="500"

        android:gravity="center"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.48"
        android:layout_marginTop="15dp"
        android:text="Categories"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="25sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter1"
                android:scaleType="fitXY"

                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Computer Science"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"

            android:weightSum="4"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter2"
                android:scaleType="fitXY"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Business"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_marginLeft="20dp"

            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter3"
                android:scaleType="fitXY"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Law"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter4"
                android:scaleType="fitXY"

                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Finance"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"

            android:weightSum="4"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter5"
                android:scaleType="fitXY"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Engineering"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_marginLeft="20dp"

            android:orientation="vertical">
            <ImageButton
                android:id="@+id/cat_img_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@drawable/round_button_2"
                android:src="@drawable/inter6"
                android:scaleType="fitXY"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:text="Media"
                android:textSize="10sp"
                android:padding="0dp"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed-light"
                android:textColor="#C8C8C8"
                android:textFontWeight="500"

                />

        </LinearLayout>



    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="0.6"

        android:minHeight="30dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    <EditText
        android:id="@+id/search_bar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="12sp"


        android:background="@drawable/round_corner_4"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:padding="10dp"

        android:hint="search"
        android:visibility="visible"/>


        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text=" "
            android:background="?android:attr/selectableItemBackground"
            />
    </FrameLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="2.9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="5"

        android:orientation="horizontal"
        android:background="#ECECEC"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/home"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"            android:background="@drawable/ic_round_home_24"
            ></ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/football"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"            android:background="@drawable/ic_twotone_sports_soccer_24"
            android:drawableTint="@color/blue"
            ></ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/groups"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"            android:background="@drawable/ic_outline_groups_24"
            ></ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/notifcations"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"            android:background="@drawable/ic_baseline_school_24"
            ></ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/profile"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_outline_person_24"
            ></ImageButton>



    </LinearLayout>



</LinearLayout>