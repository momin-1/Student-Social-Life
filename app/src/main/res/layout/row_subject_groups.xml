<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:background="@drawable/round_corner"
    app:cardCornerRadius="10dp"

    android:layout_margin="5dp"
    app:cardElevation="10dp">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".comment_item"
        android:background="@drawable/round_corner"
        android:weightSum="10"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="2"
            android:id="@+id/profile_image"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/book"
            app:civ_border_width="2dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5"
            >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-thin"
            android:textFontWeight="500"

            android:text="CSIT115"/>
            <TextView
                android:id="@+id/longname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_weight="2.5"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"

                android:text="Data management and security"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="3"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/join"
                android:layout_marginTop="10dp"
android:elevation="50dp"
                android:layout_weight="1.8"
                android:text="Join"
                android:background="@drawable/gradient_color_3"
                android:textColor="@color/white"



                />

            <TextView
                android:id="@+id/no_of_members"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_baseline_group_24"
                android:text="20 Members"
                android:textSize="10sp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>