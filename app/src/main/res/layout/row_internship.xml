<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center"
    android:background="@drawable/round_corner"
    app:cardCornerRadius="20dp"

    android:layout_margin="5dp"
    app:cardElevation="10dp">


    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".comment_item"
        android:background="@drawable/round_corner"
        android:weightSum="10"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="2"
            android:id="@+id/profile_image"
android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/jobs"
            app:civ_border_width="2dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_marginLeft="5dp"
            android:weightSum="7"
            android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-thin"
            android:textFontWeight="500"

            android:text="IT Support at Ennovatech Solutions FZ
LLC"/>


            <TextView
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textSize="10sp"

                android:gravity="top"
                android:layout_marginLeft="3dp"
                android:fontFamily="sans-serif-thin"
                android:textFontWeight="300"
                android:textColor="@color/blue"

                android:text="Internship : AED 1,200/ per month"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.5"
    android:orientation="horizontal"
    android:weightSum="3">

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:drawableLeft="@drawable/ic_baseline_pin"
                android:text=" Business bay, blue tower"
                android:textSize="10sp"

                android:gravity="center_vertical"
                />
    <TextView
        android:id="@+id/no_of_members"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_baseline_group_24"
        android:text="10 Interested"
        android:textSize="8sp"
        android:gravity="center"
        />

</LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>